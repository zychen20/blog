---
import { SOCIALS } from "@config";
import LinkButton from "./LinkButton.astro";
import socialIcons from "@assets/socialIcons";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<div class={`social-icons ${centered ? "flex" : ""}`}>
  {
    SOCIALS.filter(social => social.active).map(social => (
      <LinkButton
        href={social.href}
        className="link-button"
        title={social.linkTitle}
        target={social.name !== "Mail" ? "_blank" : "_self"}
      >
        <Fragment set:html={socialIcons[social.name]} />
      </LinkButton>
    ))
  }
  <LinkButton
    href=""
    className="link-button"
    title={"Email me"}
  >
    <Fragment set:html={socialIcons["Mail"]} />
  </LinkButton>
  <span id="mail" class="text-sm font-mono mx-1"></span>
</div>

<style>
  .social-icons {
    @apply flex-wrap justify-center gap-1;
  }
  .link-button {
    @apply p-2 hover:rotate-6 sm:p-1;
  }
</style>

<script>
  function toggleShowEmail() {
    const email = document.querySelector("#mail");
    if (email == undefined) return;
    if (email.textContent) {
      email.textContent = "";
    } else {
      email.textContent = atob("enljaGVuMjAyM0BnbWFpbC5jb20=");
    }
  }
  const socialIcons = document.querySelectorAll("div.social-icons > a")
  const mailButton = socialIcons[socialIcons.length-1];
  if (mailButton) {
    mailButton.addEventListener("click", toggleShowEmail);
  }
</script>
